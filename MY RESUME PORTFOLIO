    <script>
       // Smooth Fade-in Animation on Scroll
const sections = document.querySelectorAll('.about, .skill, .Projects, .education, .location');
const skillFills = document.querySelectorAll('.skill-fill');

const revealOnScroll = () => {
    const windowHeight = window.innerHeight;
    sections.forEach(sec => {
        const sectionTop = sec.getBoundingClientRect().top;
        if (sectionTop < windowHeight - 100) {
            sec.style.opacity = '1';
            sec.style.transform = 'translateY(0)';
        } else {
            sec.style.opacity = '0';
            sec.style.transform = 'translateY(30px)';
            sec.style.transition = 'all 0.6s ease-in-out';
        }
    });

    // Animate Skill Bars
    skillFills.forEach(fill => {
        const fillTop = fill.getBoundingClientRect().top;
        if (fillTop < windowHeight - 100) {
            fill.style.width = fill.dataset.percent;
        }
    });
};

window.addEventListener('scroll', revealOnScroll);
revealOnScroll();

// Typing Animation in Header
const title = document.querySelector('header h2');
const text = "WEB-DEVELOPER";
let index = 0;
function typingEffect() {
    if (index < text.length) {
        title.textContent = text.slice(0, index + 1);
        index++;
        setTimeout(typingEffect, 100);
    }
}
typingEffect();



    </script>
